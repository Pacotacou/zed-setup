// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space i": "editor::ToggleInlayHints",
      "space n": "editor::ToggleLineNumbers",
      "space e": "project_panel::ToggleFocus",
      "space f f": "file_finder::Toggle",
      "space s g": "pane::DeploySearch",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "space shift-x": "workspace::CloseInactiveTabsAndPanes",
      "space v": "pane::SplitRight",
      "space h": "pane::SplitDown",
      "space o": "workspace::Open",
      "space q": "pane::CloseActiveItem",
      "space d": "editor::GoToDiagnostic",
      "space w": "editor::ToggleSoftWrap",
      // "space s": "vim::PushAddSurrounds",
      // "space S": "vim::PushChangeSurrounds",
    },
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "space s": "vim::PushAddSurrounds",
      "space S": "vim::PushChangeSurrounds"
    }
  }
  // { "context": "Editor && vim_mode == insert", "bindings": { "j k": "vim::NormalBefore" }, },
  {
    "context": "menu",
    "bindings": {
      "j": "menu::SelectNext",
      "k": "menu::SelectPrevious"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-p": "workspace::Open",
      "ctrl-n": "workspace::ToggleLeftDock"
    }
  },
  // { "context": "Pane && !menu && VimControl", "bindings": { "space q": "pane::CloseActiveItem", } },
  {
    "context": "Dock || Terminal || Editor || ProjectPanel",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "ctrl-n": "workspace::ToggleLeftDock",
      // Basic Navigation
      "h": "project_panel::CollapseSelectedEntry",
      "l": "project_panel::ExpandSelectedEntry",
      "j": "menu::SelectNext",
      "k": "menu::SelectPrevious",
      // File Management (NvChad Style)
      "a": "project_panel::NewFile",
      "A": "project_panel::NewDirectory",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste",
      // Open Actions
      // "enter": "project_panel::Open",
      // "shift-enter": "project_panel::OpenPermanent",
      "v": "project_panel::OpenSplitVertical",
      "s": "project_panel::OpenSplitHorizontal"
    }
  }
]
